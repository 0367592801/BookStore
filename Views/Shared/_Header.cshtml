<link rel="stylesheet" href="~/wwwroot/css/bootstrap.min.css">
<link rel="stylesheet" href="~/wwwroot/css/ownstyle.css">
<link rel="stylesheet" href="~/wwwroot/css/effect.css">
<link rel="stylesheet" href="~/wwwroot/css/responsive.css">
<link rel="stylesheet" href="~/wwwroot/css/font-awesome.min.css">
<header>
    <div class="row">
        <div class="container">
            <div class="col-xs-12">
                <div class="head-top">
                    <ul class="head-social unliststyle">
                        <li><a href=""><i class="fa fa-facebook"></i></a></li>
                        <li><a href=""><i class="fa fa-google-plus"></i></a></li>
                        <li><a href=""><i class="fa fa-twitter"></i></a></li>
                        <li><a href=""><i class="fa fa-youtube"></i></a></li>
                    </ul>
                    <ul class="head-account unliststyle">
                        <li>
                            <i class="fa fa-sign-in"></i>
                            @Html.ActionLink("Đăng nhập", "Login", "Login")
                        </li>
                        <li>
                            <i class="fa fa-user-plus"></i>
                            @Html.ActionLink("Đăng kí", "SignUp", "Login")
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-3">
                <div class="head-logo">
                    <a href="@Url.Action("Index", "Home")">
                        <svg width="1em" height="0.9em" viewBox="0 0 16 16" class="bi bi-bootstrap-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4.002 0a4 4 0 0 0-4 4v8a4 4 0 0 0 4 4h8a4 4 0 0 0 4-4V4a4 4 0 0 0-4-4h-8zm1.06 12h3.475c1.804 0 2.888-.908 2.888-2.396 0-1.102-.761-1.916-1.904-2.034v-.1c.832-.14 1.482-.93 1.482-1.816 0-1.3-.955-2.11-2.542-2.11H5.062V12zm1.313-4.875V4.658h1.78c.973 0 1.542.457 1.542 1.237 0 .802-.604 1.23-1.764 1.23H6.375zm0 3.762h1.898c1.184 0 1.81-.48 1.81-1.377 0-.885-.65-1.348-1.886-1.348H6.375v2.725z" />
                        </svg>Bookshop
                    </a>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="head-search">
                    <input type="text">
                    <button onclick="search()">Tìm kiếm</button>
                </div>
            </div>
            <div class="col-xs-3">
                <div class="head-hotline">
                    <i class="fa fa-phone"></i>
                    <span>(08) 372 52002</span>
                </div>
            </div>
        </div>
    </div>
</header>
<nav>
    <div class="row">
        <div class="container">
            <div class="col-xs-10" ">
                <ul class="navigation unliststyle">
                    <li class="nav-item">
                        <i class="fa fa-home"></i>
                        @Html.ActionLink("Trang chủ", "Index", "Home")
                    </li>
                    <li class="nav-item">@Html.ActionLink("Tin Tức", "News", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Khuyến mãi", "Promotion", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Về chúng tôi", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                </ul>
            </div>
            <div class="col-xs-2">
                <div class="cart">
                    <h4 class="cart-head" onclick="openShoppingCart()">
                        <i class="fa fa-shopping-cart"></i>
                        <span>0 Item</span>
                        <i class="fa fa-angle-down"></i>
                    </h4>
                    <ul class="cart-product">
                        <li class="cart-item unliststyle">
                            <p>Giỏ hàng trống</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>
<script src="~/wwwroot/js/jquery-1.11.3.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="~/wwwroot/js/bootstrap.min.js"></script>
<script src="~/wwwroot/js/ownscript.js"></script>
<script src="~/wwwroot/js/slide-show.js"></script>
<script>
    function search() {
        urlResult = "@Url.Action("ShowListProduct", "Home")";
        window.open(urlResult,"_self");
    }
    function openShoppingCart() {
        urlResult = "@Url.Action("ShoppingCart", "Home")";
        window.open(urlResult,"_self");
    }
</script>